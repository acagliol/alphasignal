# AlphaSignal Environment Variables Configuration

# ===== Database =====
DATABASE_URL=sqlite:///./alphasignal.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/alphasignal

# ===== Application Settings =====
DEBUG=False
SECRET_KEY=your-secret-key-change-this-in-production

# ===== Alternative Data API Keys =====

# News API - Get your key from https://newsapi.org/
NEWS_API_KEY=your_newsapi_key_here

# Alpha Vantage - Get your key from https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alphavantage_key_here

# Reddit API - Register app at https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=AlphaSignal Bot 1.0

# Twitter/X API (Optional) - Get from https://developer.twitter.com/
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# ===== Feature Flags =====
USE_CPP_INDICATORS=True

# ===== Model Settings =====
MODEL_PATH=./models
MODEL_VERSION=v1.0
